  {{> character-card}}
  <form class="new-review-form bg-slate-600 border-4">
      <div class="form-group row-span-1 grid grid-cols-3 mb-2">
        <label class="text-zinc-50 text-xl">Rate the character here out of 10</label>
        <textarea class="form-input" type="text" id="character-rating"></textarea>
      </div>
      <div class="form-group row-span-1 grid grid-cols-3 mb-2">
        <label class="text-zinc-50 text-xl">Type your comment here</label>
