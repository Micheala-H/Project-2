<div class="card col-span-1 px-4 border-4 bg-slate-600 ">
  <div class="card-header">
    <h3 class="font-xl text-zinc-50 font-bold">{{ name }}</h3>
    <img id="thumb-pic4" src="{{pic}}" alt="">
    <p class="font-bold text-zinc-50">Realm:  <span class="font-normal">{{ realm }}</span></p>
  </div>
  <div class="card-body">
    <p class="font-bold text-zinc-50">Race: <span class="font-normal">{{ race }}</span></p>
    <p class="font-bold text-zinc-50">Spec: <span class="font-normal"> {{ spec }}</span></p>
    <p class="font-bold text-zinc-50">Role: <span class="font-normal">  {{ role }}</span></p>
    <p class="font-bold text-zinc-50">Gender: <span class="font-normal"> {{ gender }}</span></p>
    <p class="font-bold text-zinc-50">Faction: <span class="font-normal"> {{ faction }}</span></p>
    <p class="font-bold text-zinc-50">Points: <span class="font-normal"> {{ points }}</span></p>
    <p class="font-bold text-zinc-50">Kills: <span class="font-normal"> {{ kills }}</span></p>
    <button class="font-bold text-xl text-zinc-50 bg-amber-600 p-1 rounded delete-review-btn mt-2 mb-2" id="delete-character-btn" data-id="{{id}}">Delete Character</button>
      {{#if reviews}}
      {{#each reviews as |review|}}
      <div class="review">
        <h2 class="font-bold text-zinc-50">Review</h2>
        <p class="font-bold text-zinc-50">Rating: <span class="font-normal">{{ review.rating }}</span></p>
        <p class="font-bold text-zinc-50">Comment: <span class="font-normal">{{ review.comment }}</span></p>
        <button class="font-bold text-xl text-zinc-50 bg-amber-600 p-1 rounded delete-review-btn mt-2 mb-2" data-id="{{id}}">Delete Comment</button>
      </div>
      {{/each}}
    {{else}}
      <div class="review font-bold text-zinc-50">
        <h1>Character notes:</h1>
        <a href="/character/{{id}}" class="font-bold text-zinc-50 bg-amber-600 p-1 rounded delete-review-btn  mb-">Add Comment</a>
      </div>
    {{/if}}
  </div>
</div>

